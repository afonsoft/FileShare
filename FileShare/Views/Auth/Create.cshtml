@model FileShare.Models.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div class="container-fluid">
    <div class="row">
        <div  class="col">
            <div align="center" class="center">
                <!-- HorizontalResponsivo -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-2122647083447667"
                     data-ad-slot="2536456475"
                     data-ad-format="auto"
                     data-full-width-responsive="true"></ins>
            </div>
        </div>
    </div>
    <div class="row" style="margin-top: 80px;">
        <div class="col">      
              <div class="d-flex justify-content-center h-100">
			    <div class="user_card" style="width: 400px;">
				    <div class="d-flex justify-content-center">
					    <div class="brand_logo_container">
						    <img src="https://files.afonsoft.com.br/img/FileShareUpload512.png" class="brand_logo" alt="Logo">
					    </div>
				    </div>
				    <div class="d-flex justify-content-center form_container">
					    <form id="createForm"  asp-action="Create" style="width: 90%;">
						    
                        @Html.AntiForgeryToken()
                         <div asp-validation-summary="ModelOnly" class="validation-summary alert alert-danger alert-dismissable" style="width:100%">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">
                                    &times;
                                </span>
                            </button>
                        </div>
                       	<div class="input-group mb-3">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<input type="text"  asp-for="Username" class="form-control input_user" placeholder="username" style="font-size: 10pt;">
						</div>
						<div class="input-group mb-2">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<input type="password" asp-for="Password" class="form-control input_pass" placeholder="password" style="font-size: 10pt;">
						</div>
                        <div class="input-group mb-2">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<input type="password" asp-for="Password2" class="form-control input_pass" placeholder="password" style="font-size: 10pt;">
						</div>
						<div class="d-flex justify-content-center mt-3 login_container">
                            <input class="btn login_btn" type="submit" title="Create" value="Create" />
				        </div>
                        </form>
				    </div>
			    </div>
		    </div>
        </div>
        <div class="col-8">
            <div align="center" class="center">
                <!-- QuadradoResponsivo -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-2122647083447667"
                     data-ad-slot="8909468727"
                     data-ad-format="auto"
                     data-full-width-responsive="true"></ins>
            </div>
        </div>
    </div>
    <div class="row" style="margin-top: 30px;margin-bottom: 60px;">
        <div  class="col">
            <div align="center" class="center">
                <!-- HorizontalResponsivo -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-2122647083447667"
                     data-ad-slot="2536456475"
                     data-ad-format="auto"
                     data-full-width-responsive="true"></ins>
            </div>
        </div>
    </div>
</div>
