@{
    ViewData["Title"] = "File Share";
}

<div class="container-fluid">
    <div class="row">
        <div  class="col">File Share</div>
    </div>
    <div class="row">
        <div  class="col">
            <div align="center" class="center">
                <!-- HorizontalResponsivo -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-2122647083447667"
                     data-ad-slot="2536456475"
                     data-ad-format="auto"
                     data-full-width-responsive="true"></ins>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">      
              <div class="d-flex justify-content-center h-100">
			    <div class="user_card">
				    <div class="d-flex justify-content-center">
					    <div class="brand_logo_container">
						    <img src="https://files.afonsoft.com.br/img/FileShareUpload512.png" class="brand_logo" alt="Logo">
					    </div>
				    </div>
				    <div class="d-flex justify-content-center form_container">
					    <form id="uploadForm" action="Streaming/UploadFileStream" method="post" enctype="multipart/form-data"> 
						    <div class="form-group mb-3">
		                        <div class="custom-file">
    		                        <input type="file" class="custom-file-input" id="customFile" />			
                                    <label class="custom-file-label" for="customFile">Choose file</label>
		                        </div>
                            </div>
                            <div class="input-group mb-2" style="height: 20px;display: block;">
							    <div class="progress" id="progress" style="height: 20px;display: none;">
                                    <div class="progress-bar bg-danger progress-bar-striped progress-bar-animated" role="progressbar" id="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
                                </div>
						    </div>
						    <div class="d-flex justify-content-center mt-3 login_container">
				 	            <button type="button" name="button" class="btn login_btn" onclick="return UploadSubimit(document.getElementById('uploadForm'), 'Streaming/UploadFileStream')" >Upload File</button>
				            </div>

                            <div class="form-group mb-3" style="margin-top: 20px;">
                                <div class="alert alert-danger alert-dismissible" id="alertShow" role="alert" style="display: none;">
                                    <span id="alertText"></span>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="top:-12px;right:-10px;">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            </div>
					    </form>
				    </div>
			    </div>
		    </div>
        </div>
        <div class="col-8">
            <div align="center" class="center">
                <!-- QuadradoResponsivo -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-2122647083447667"
                     data-ad-slot="8909468727"
                     data-ad-format="auto"
                     data-full-width-responsive="true"></ins>
            </div>
        </div>
    </div>
    <div class="row">
        <div  class="col">
            <div align="center" class="center">
                <!-- HorizontalResponsivo -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-2122647083447667"
                     data-ad-slot="2536456475"
                     data-ad-format="auto"
                     data-full-width-responsive="true"></ins>
            </div>
        </div>
    </div>
</div>

   
